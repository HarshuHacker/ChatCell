<!-- _header.ejs -->

<link rel="stylesheet" href="<%= assetPath('CSS/header.css')%>">

<div id="header">
  <div id="left-header">
    <a href="/">
      <h1>ChatCell</h1>
    </a>
  </div>
  
  <div id="right-header">
    <ul type=none>
  
      <% if(locals.user){%>
        <li>
          <a href="/users/profile/<%=user.id%>">
            <%= user.name%>
          </a>
        </li>
        <li>
          <a href="/users/sign-out">Sign Out</a>
        </li>
      <%} else {%>
        <li>
          <a href="/users/sign-in">Sign In</a>
        </li>
        <li>
          <a href="/users/sign-up">Sign Up</a>
        </li>
      <%}%>
    
    </ul>
  </div>
</div>