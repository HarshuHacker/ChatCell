<!-- user_sign_up.ejs -->

<link rel="stylesheet" href="<%=assetPath('CSS/user_sign_up.css')%>">

<img src="<%= assetPath('Images/Sign Background.png')%>" alt="Background" style="width: 100%; height: 100%; z-index: -1;">

<main>
  <div id="left-side">

  </div>

  <div id="right-side">
    <h2>Sign Up</h2>

    <form action="/users/create" method="post">

      <div id="name-div">
        <p>
          <label for="name">
            Name
          </label>
        </p>
        <p>
          <input type="text" name="name" placeholder="Enter Your Name" id="name" required>
        </p>
      </div>

      <div id="email-div">
        <p>
          <label for="email">
            Email Id
          </label>
        </p>
        <p>
          <input type="email" name="email" placeholder="Enter Your Email" id="email" required>
        </p>
      </div>

      <div id="password-div">
        <p>
          <label for="password">
            Password
          </label>
        </p>
        <p>
          <input type="password" name="password" placeholder="Enter Your Password" id="password" required>
        </p>
      </div>

      <div id="cnf-password-div">
        <p>
          <label for="cnf-password">
            Confirm Password
          </label>
        </p>
        <p>
          <input type="password" name="cnf_password" placeholder="Re-Enter Your Password" id="cnf-password" required>
        </p>
      </div>

      <div class="sign-up-button">
        <button type="submit">Sign Up</button>
      </div>

      <div class="sign-up-button">
        <a href="/users/auth/google">
          <button type="button">
            <i class="fab fa-google"></i> Sign Up
          </button>
        </a>
      </div>
      
    </form>
  </div>
</main>